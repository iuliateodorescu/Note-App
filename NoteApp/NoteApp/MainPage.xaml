<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteApp.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Source="xamagon" BackgroundColor="PowderBlue"
               Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"/>

        <Editor Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                Placeholder="Enter Text Here"/>

        <Button Grid.Row="2" Grid.Column="0" 
                BackgroundColor="GreenYellow"  TextColor="White" Text="Save"/>

        <Button Grid.Row="2" Grid.Column="1" 
                BackgroundColor="LightPink" TextColor="White"  Text="Delete"/>

        <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
               FontSize="Large"/>
    </Grid>

</ContentPage>
